<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.fragments.ParticipantsFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutParticipants"
        style="@style/Widget.MaterialComponents.TabLayout.PrimarySurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:tabGravity="fill"
        app:tabIconTint="@drawable/selector_tabs"
        app:tabIndicatorColor="@color/white"
        app:tabInlineLabel="true"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabRippleColor="@color/white"
        app:tabTextColor="@drawable/selector_tabs"
        tools:ignore="MissingConstraints"
        tools:viewBindingIgnore="true" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerParticipants"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayoutParticipants" />

</androidx.constraintlayout.widget.ConstraintLayout>